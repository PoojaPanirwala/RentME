@model RentME.Models.Post
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
    <style>
        #carouselExampleControlsNoTouching {
            height: 400px;
            width: 500px;
            border-radius: 65px;
        }

        .d-block {
            height: 400px;
            width: 500px;
            border-radius: 65px;
        }

        .FirstContainer {
            display: flex;
            align-items: center;
            justify-content: center
        }

        #carouselExampleControlsNoTouching {
            flex-basis: 40%
        }

        .text {
            font-size: 20px;
            padding-left: 20px;
            font-family: initial;
            font-style: italic;
        }

        .blink_me {
            animation: blinker 2s linear infinite;
        }

        @@keyframes blinker {
            50% {
                opacity: 0;
                color: brown;
            }
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

        .b-example-divider {
            height: 3rem;
            background-color: rgba(0, 0, 0, .1);
            border: solid rgba(0, 0, 0, .15);
            border-width: 1px 0;
            box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
        }

        .b-example-vr {
            flex-shrink: 0;
            width: 1.5rem;
            height: 100vh;
        }

        .bi {
            vertical-align: -.125em;
            fill: currentColor;
        }

        .nav-scroller {
            position: relative;
            z-index: 2;
            height: 2.75rem;
            overflow-y: hidden;
        }

            .nav-scroller .nav {
                display: flex;
                flex-wrap: nowrap;
                padding-bottom: 1rem;
                margin-top: -1px;
                overflow-x: auto;
                text-align: center;
                white-space: nowrap;
                -webkit-overflow-scrolling: touch;
            }
    </style>
</head>
<div class="FirstContainer">
    <div id="carouselExampleControlsNoTouching" class="carousel slide grid-container mt-3" data-bs-touch="false" data-interval="500">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="img/property7.jpg" class="d-block" alt="property7" $carousel-control-width: 15%;>
            </div>
            <div class="carousel-item">
                <img src="img/property2.jpg" class="d-block" alt="property2">
            </div>
            <div class="carousel-item">
                <img src="img/property3.jpg" class="d-block" alt="property3">
            </div>
            <div class="carousel-item">
                <img src="img/property4.jpg" class="d-block" alt="property4">
            </div>
            <div class="carousel-item">
                <img src="img/property5.jpg" class="d-block" alt="property5">
            </div>
            <div class="carousel-item">
                <img src="img/property6.jpg" class="d-block" alt="property6">
            </div>
            <div class="carousel-item">
                <img src="img/property7.jpg" class="d-block" alt="property7">
            </div>
            <div class="carousel-item">
                <img src="img/car1.jpg" class="d-block" alt="car1">
            </div>
            <div class="carousel-item">
                <img src="img/car2.jpg" class="d-block" alt="car2">
            </div>

            <div class="carousel-item">
                <img src="img/car4.jpg" class="d-block" alt="car4">
            </div>
            <div class="carousel-item">
                <img src="img/car5.jpg" class="d-block" alt="car5">
            </div>

            <div class="carousel-item">
                <img src="img/car7.jpg" class="d-block" alt="car7">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="text">
        <h4>
            Welcome to <font class="blink_me"><b>RentME</b></font> This is your one and only stop for anything RentME. Whether you’re
            looking to get the most out of your RentME experience or you just want to learn more about
            our users and our impact on the community, look no further. Tutorials, blog articles, portraits
            of fellow users, advice, news… Find it all on RentME site!
        </h4>
    </div>
</div>
<hr class="colorgraph" />
<nav class="navbar navbar-light" style="background-color: #e6ccb3;">
    <div class="container-fluid">
        <a class="navbar-brand">Latest Posts</a>
        <div class="d-flex">
           @* <form class="d-flex" style="margin-right:5px;">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn theme-btn" type="submit">Search</button>
            </form>*@
            @if (TempData["firstname"] != null)
            {
                <button class="btn theme-btn ml-2" onclick="location.href='@Url.Action("Create","Post")';"><i class="fa fa-camera"></i>&emsp;New Post</button>
            }
        </div>
    </div>
</nav>
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @if (Model.postsList != null)
            {
                foreach (var item in Model.postsList)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="225"
                         role="img" src="@item.imageURL" />

                            <div class="card-body">
                                <p class="card-text">@item.description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @if (TempData["firstname"] == null)
                                        {
                                            @*<button type="button" class="btn btn-sm btn-outline-secondary">View</button>*@
                                        }
                                        else
                                        {
                                            @*<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                            <button type="button" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></button>*@
                                            <button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("Delete","Post", new{ id = @item.postID })'"><i class="fa fa-trash"></i>Delete</button>
                                        }
                                    </div>
                                    <small class="text-muted">@item.addedDate.Date</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
