<!-- Large modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    RentME SignUp
                </h4>
                <button type="button" class="btn-close btnHideModal" aria-label="Close" data-dismiss="modal" aria-hidden="true">
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8" style="border-right: 1px dotted #C2C2C2;padding-right: 30px;">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs">
                            <li class="nav-item"><a href="#Login" class="nav-link active" data-bs-toggle="tab">Login</a></li>
                            <li class="nav-item"><a href="#Registration" class="nav-link" data-bs-toggle="tab">Registration</a></li>
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane active" id="Login">
                                <form role="form" class="form-horizontal" method="post" action="/User/Login">
                                    <div class="mb-3 row">
                                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="userName" name="userName" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="password" name="password">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-2">
                                        </div>
                                        <div class="col-sm-10">

                                            <button type="submit" class="btn theme-btn btn-sm">
                                                Login
                                            </button>
                                            <a href="javascript:;" style="text-decoration:none;color:cadetblue">Forgot your password?</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane" id="Registration">
                                <form role="form" class="form-horizontal" method="post" action="/User/Register">
                                    <div class="form-group">
                                        <label for="firstName" class="col-sm-2 control-label">
                                            Name
                                        </label>
                                        <div class="col-md-11">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <select class="form-control">
                                                        <option>Mr.</option>
                                                        <option>Ms.</option>
                                                        <option>Mrs.</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-9 row">
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control" placeholder="First" id="firstName" name="FirtName" aria-describedby="addon-wrapping">
                                                    </div>
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control" placeholder="Last" id="lastName" name="Lastname" aria-describedby="addon-wrapping">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mt-2">
                                        <label for="userName" class="col-sm-2 control-label">
                                            Email
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="email" class="form-control" id="userName" name="userName" placeholder="abc@xyz.com" />
                                        </div>
                                    </div>
                                    <div class="form-group mt-2">
                                        <label for="mobile" class="col-sm-2 control-label">
                                            Mobile
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="mobileNo" name="mobileNo" placeholder="+1 " />
                                        </div>
                                    </div>
                                    <div class="form-group mt-2">
                                        <label for="password" class="col-sm-2 control-label">
                                            Password
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="password" name="password" placeholder="Secret Password" />
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-sm theme-btn">
                                                Save & Continue
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        @*  <div id="OR" class="hidden-xs">
                        OR
                        </div>*@
                    </div>
                    <div class="col-md-4">
                        <div class="row text-center sign-with">
                            <div class="col-md-12">
                                <h3>
                                    Sign in with
                                </h3>
                            </div>
                            <div class="col-md-12">
                                <div class="btn-group btn-group-justified">
                                    <a href="#" class="btn" style="background-color:cadetblue;color:white;">Facebook</a> <a href="#" class="btn" style="background-color:lightsteelblue;color:black;">
                                        Google
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>